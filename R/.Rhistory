# Functions for building package
build_package = function(package = getwd(), vignettes = F){
devtools::build(pkg = package, vignettes = vignettes)
}
build_vignettes = function(package = getwd()){devtools::build_vignettes(package)}
install_package = function(package_source){
system2("R", args = c("CMD", "INSTALL", package_source))
}
# Functions for testing package
r_check = function(package_source){
system2("R", args = c("CMD", "check", package_source))
}
#r_check_log = function()
bioc_check = function(package = getwd()){BiocCheck::BiocCheck(package = getwd())}
bioc_git_check = function(package = getwd()){BiocCheck::BiocCheckGitClone(package)}
run_examples = function(package = getwd()){devtools::run_examples(package)}
